rules_version = '2';

// Firebase Storage security rules for CollabCanvas
service firebase.storage {
  match /b/{bucket}/o {
    // Audio recordings - allow authenticated users to read and write
    match /audio/{canvasId}/{fileName} {
      // Allow authenticated users to upload audio
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('audio/.*');
      
      // Allow all authenticated users to read audio (collaborative feature)
      allow read: if request.auth != null;
      
      // Allow authenticated users to delete their own recordings
      allow delete: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

